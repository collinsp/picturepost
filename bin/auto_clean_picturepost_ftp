#!/bin/bash

# This script is for cleaning the FTP folder of all files
#   and folders older than two weeks. It should run as a 
#   crontab.
# Examples:
#     (Runs at 2:30 every morning)
#   30 2 * * * /web/picturepost/bin/auto_clean_picturepost_ftp
#     (Every Saturday at 8 in the morning)
#   0 8 * * 6 /web/picturepost/bin/auto_clean_picturepost_ftp

/bin/find /var/ftp/pub/outgoing/picturepost/ -mtime +14 -exec rm -rf {} \;

#find ./test_delete -mtime -1 -exec rm -rf {} \;



